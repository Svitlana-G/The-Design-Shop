<%- include('./partials/head') %>
    <main class="item">
        <section>
            <a href="/add/<%=data._id%>/edit">Edit</a>
            <a href="/add/<%=data._id%>/delete">Delete</a>
        </section>

        <figure class="shop-article">
            <img src=<%=data.ProductLink %> alt="">

            <figcaption>
                <div>
                    <h2>
                        <%=data.ProductName%>
                    </h2>
                    <span>
                        <%=data.Company%>
                    </span>
                </div>
                <p>
                    <%=data.Price%>
                </p>
            </figcaption>
        </figure>
        <h3>Product Description:</h3>
        <p class="description">
            <%= data.Description %>
        </p>
        <div class="buy-button">
            <button>BUY PRODUCT</button>
        </div>
    </main>

    <%- include('./partials/footer') %>