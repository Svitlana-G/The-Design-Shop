<%- include('./partials/head') %>
    <main class="edit">
        <figure class="shop-article">
            <img src=<%=data.ProductLink %> alt="">

            <figcaption>
                <div>
                    <h2>
                        <%=data.ProductName%>
                    </h2>
                    <span>
                        <%=data.Company%>
                    </span>
                </div>
                <p>
                    <%=data.Price%>
                </p>
            </figcaption>
        </figure>
        <h3>Product Description:</h3>
        <p class="description">
            <%= data.Description %>
        </p>
        <h1>EDIT PRODUCT</h1>
        <form action="/add/<%= data._id%>/edit" method="post">
            <input type="text" value="<%=data.ProductName%>" name="product" required>
            <input type="text" name="url" value="<%= data.ProductLink%>" required>
            <input type="text" name="compagny" value="<%= data.Company%>" required>
            <input type="text" name="price" value="<%= data.Price%>" required>
            <textarea name="description" cols="30" rows="5" required><%= data.Description %></textarea>
            <input type="submit" value="EDIT PRODUCT">
        </form>
    </main>


    <%- include('./partials/footer') %>